<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.desc %></td>
        <td><%= post.topic_id %></td>
        <td><%= link_to 'Show', topic_post_url(@topic, post.id) %></td>
        <td><%= link_to 'Edit', edit_topic_post_url(@topic, post.id) %></td>
        <td><%= link_to 'Destroy', topic_post_path(@topic, post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_topic_post_path(@topic) %>
