<p id="notice"><%= notice %></p>

<h1> List Topics</h1>
<%= link_to 'Add New Topic', new_topic_path, class:'btn btn-primary' %>

<table class="table table-hover mt-3">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @allposts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.desc %></td>
        <td><%= post.topic_id %></td>
        <td><%= link_to 'Show', topic_post_url(post.topic_id, post.id) %></td>
        <td><%= link_to 'Edit', edit_topic_post_url(post.topic_id, post.id) %></td>
        <td><%= link_to 'Destroy', topic_post_path(post.topic_id, post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="txt-center">
<ul class="pagination">
<%= link_to " Previous Page ", allposts_path(page: @page - 1), class:"page-item btn border m-2" %>
<%= link_to @page  , allposts_path(page: @page), class:"page-item btn border m-2" %>
<%= link_to @page + 1  , allposts_path(page: @page + 1), class:"page-item btn border m-2" %>
<%= link_to @page + 2  , allposts_path(page: @page + 2), class:"page-item btn border m-2" %>
<%= link_to " Next Page ", allposts_path(page: @page + 1), class:"page-item btn border m-2" %>
</ul>
</div>

<br>